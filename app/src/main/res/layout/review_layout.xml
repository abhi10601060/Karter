<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/review_RL">

    <TextView
        android:id="@+id/review_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Name"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/review_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/review_name"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="3dp"
        android:text="here comes the description of review" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/review_description"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:text="Date"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/review_date"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_hollow_star"
            android:id="@+id/review_layout_first_hollow_star"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_review_star"
            android:id="@+id/review_layout_first_star"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_hollow_star"
            android:layout_toRightOf="@+id/review_layout_first_hollow_star"
            android:id="@+id/review_layout_second_hollow_star"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_review_star"
            android:layout_toRightOf="@+id/review_layout_first_hollow_star"
            android:id="@+id/review_layout_second_star"
            android:visibility="gone"/>


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_review_star"
            android:layout_toRightOf="@+id/review_layout_second_hollow_star"
            android:id="@+id/review_layout_third_star"
            android:visibility="gone"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_hollow_star"
            android:layout_toRightOf="@+id/review_layout_second_hollow_star"
            android:id="@+id/review_layout_third_hollow_star"
            />


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_hollow_star"
            android:layout_toRightOf="@id/review_layout_third_hollow_star"
            android:id="@+id/review_layout_fourth_hollow_star"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_review_star"
            android:layout_toRightOf="@id/review_layout_third_hollow_star"
            android:id="@+id/review_layout_fourth_star"
            android:visibility="gone"/>



        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_hollow_star"
            android:layout_toRightOf="@+id/review_layout_fourth_hollow_star"
            android:id="@+id/review_layout_fifth_hollow_star"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_review_star"
            android:layout_toRightOf="@+id/review_layout_fourth_hollow_star"
            android:id="@+id/review_layout_fifth_star"
            android:visibility="gone"/>




    </RelativeLayout>



</RelativeLayout>