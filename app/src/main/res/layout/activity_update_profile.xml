<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfileActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/update_profile_toolbar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/update_profile_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/update_profile_title_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_update_profile" />

            <TextView
                android:id="@+id/txt_edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/update_profile_title_img"
                android:text="Edit Profile"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/txt_edit_profile"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_profile_svgrepo_com" />

            <TextView
                android:id="@+id/update_txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_profile"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="First Name"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/update_edt_first_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/update_txt_name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_edt_bar"
                android:drawableStart="@drawable/ic_name"
                android:drawablePadding="3dp"
                android:hint="Enter your first name here..."
                android:inputType="text"
                android:lines="1"
                android:paddingLeft="3dp" />

            <TextView
                android:id="@+id/update_txt_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/update_edt_first_name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Last Name"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/update_edt_last_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/update_txt_last_name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_edt_bar"
                android:drawableStart="@drawable/ic_name"
                android:drawablePadding="3dp"
                android:hint="Enter your first name here..."
                android:inputType="text"
                android:lines="1"
                android:paddingLeft="3dp" />


            <TextView
                android:id="@+id/update_txt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/update_edt_last_name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/update_edt_phone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/update_txt_phone"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_edt_bar"
                android:drawableStart="@drawable/ic_baseline_call_24"
                android:drawablePadding="3dp"
                android:hint="Enter phone Number"
                android:inputType="number"
                android:lines="1"
                android:paddingLeft="3dp" />


            <TextView
                android:id="@+id/update_txt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/update_edt_phone"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/update_edt_mail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/update_txt_email"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/custom_edt_bar"
                android:drawableStart="@drawable/ic_mail"
                android:drawablePadding="3dp"
                android:hint="Enter Email"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:paddingLeft="3dp"
                android:editable="false"/>

            <Button
                android:id="@+id/update_btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/update_edt_mail"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Save"
                />

        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>


</RelativeLayout>