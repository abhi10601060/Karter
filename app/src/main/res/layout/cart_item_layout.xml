<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/cart_item_parent_RL">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/cart_item_image"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/cart_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/cart_item_image"
            android:text="cart item name"
            android:textSize="18dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/cart_item_quantity_container_RL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="65dp"
            android:layout_toRightOf="@+id/cart_item_image"
            android:background="@drawable/add_btn"
            android:paddingStart="10dp"
            android:paddingTop="3dp"
            android:paddingEnd="10dp"
            android:paddingBottom="3dp">


            <ImageView
                android:id="@+id/cart_item_minus_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_minus_icon" />

            <RelativeLayout
                android:id="@+id/quantiy_container"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/cart_item_minus_btn"
                android:background="@drawable/quantity_amount_background">

                <TextView
                    android:id="@+id/cart_item_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <ImageView
                android:id="@+id/cart_item_plus_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/quantiy_container"
                android:src="@drawable/ic_plus_icon" />


        </RelativeLayout>

        <TextView
            android:id="@+id/cart_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cart_item_name"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            android:text="\u20B9100"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/cart_item_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cart_item_quantity_container_RL"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:text="\u20B9100"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_cross"
            android:id="@+id/cart_item_cross_icon"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>