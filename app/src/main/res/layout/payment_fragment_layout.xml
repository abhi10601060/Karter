<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/payment_btn_RL">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/payment_fragment_txt_item_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List Of Items :"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/payment_fragment_item_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/payment_fragment_txt_item_list"
                android:layout_marginLeft="30dp"
                android:text=""
                android:textSize="15dp" />

            <TextView
                android:id="@+id/payment_fragment_txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/payment_fragment_item_list"
                android:layout_marginTop="10dp"
                android:text="Name :"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/payment_fragment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/payment_fragment_txt_name"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="Actual name"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/payment_fragment_txt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/payment_fragment_name"
                android:layout_marginTop="5dp"
                android:text="Your Address :"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/payment_fragment_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/payment_fragment_txt_address"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="Actual Address"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/payment_fragment_txt_contact_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/payment_fragment_address"
                android:layout_marginTop="5dp"
                android:text="Contact Details :"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/payment_fragment_contact_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/payment_fragment_txt_contact_details"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="Actual Contact Details"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/payment_fragment_txt_payment_options"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/payment_fragment_contact_details"
                android:layout_marginTop="15dp"
                android:text="Payment Options :"
                android:textSize="18dp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/payment_radio_grp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/payment_fragment_txt_payment_options"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/payment_card_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:drawableEnd="@drawable/ic_plus_icon"
                    android:paddingEnd="10dp"
                    android:text="Debit / Credit card"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_theme" />


                <RadioButton
                    android:id="@+id/payment_upi_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_plus_icon"
                    android:paddingEnd="10dp"
                    android:text="UPI"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_theme" />


                <RadioButton
                    android:id="@+id/payment_net_banking_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_plus_icon"
                    android:paddingEnd="10dp"
                    android:text="Net Banking"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_theme" />

                <RadioButton
                    android:id="@+id/payment_cod_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_plus_icon"
                    android:paddingEnd="10dp"
                    android:text="Cash On Delivery"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_theme" />


            </RadioGroup>

            <TextView
                android:id="@+id/payment_fragment_txt_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/payment_radio_grp"
                android:layout_marginTop="10dp"
                android:text="Order Description :"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/payment_fragment_description_edt"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/payment_fragment_txt_description"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_edit_text"
                android:gravity="left"
                android:hint="Add your Order Description here..."
                android:lines="3"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/payment_btn_RL"
        android:layout_alignParentBottom="true"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount :"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:id="@+id/payment_fragment_txt_total_amount"/>

        <TextView
            android:id="@+id/payment_fragment_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/payment_fragment_txt_total_amount"
            android:layout_marginLeft="20dp"
            android:text="\u20B91005.0"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place order"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:id="@+id/payment_fragment_btn_place_order"/>

    </RelativeLayout>




</RelativeLayout>